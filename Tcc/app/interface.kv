                    MDLabel:
                        text: 'Senha'
                        halign: 'center'
                        pos_hint: {"center_x": .15, "center_y": .58}
                        font_size: "24sp"
                        
                    MDTextFieldRound:
                        size_hint: .8, .13
                        pos_hint: {"center_x": .5, "center_y": .45}
                        theme_text_color: 'Custom'
                        normal_color: 226/255, 226/255, 226/255, 1
                        password: True
                    MDFillRoundFlatButton:
                        text: "Entrar"
                        halign: "center"
                        pos_hint:{"center_x": .5, "center_y":0.20}
                        size_hint: .86, .2
                        md_bg_color: 7/255, 166/255, 54/255, 1
                        font_size: 24
