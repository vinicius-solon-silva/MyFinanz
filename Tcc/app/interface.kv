<Interface>:
    Screen:
        name: "Home"
        BoxLayout:
            orientation: 'vertical'
            MDToolbar:
                md_bg_color: 7/255, 166/255, 54/255, 1    
                title: "Tela Inicial"
                halign: "center"
                right_action_items: [["account-arrow-left"]]
            ScrollView:
                MDBoxLayout:
                    orientation: 'vertical'
                    size_hint: 1, 1.5
                    MDBoxLayout:
                        name: "Saldos"
                        orientation: 'horizontal'
                        size_hint: 1, None
                        MDBoxLayout:
                            orientation: 'vertical'
                            MDLabel:
                                text: 'Saldo Atual'
                                halign: "center"
                            MDLabel:
                                text: 'R$ 100,00'
                                halign: "center"
                        MDBoxLayout:
                            orientation: 'vertical'
                            MDLabel:
                                text: 'Saldo Atual'
                                halign: "center"
                            MDLabel:
                                text: 'R$ 100,00'
                                halign: "center"
                    MDBoxLayout:
                        size_hint: 1, 0.01
                        md_bg_color: 7/255, 7/255, 7/255, 1 
                    MDBoxLayout:
                        name: "Acoes"
                        orientation: 'vertical'
                        size_hint: 1, 1.0
                        spacing: 5
                        MDLabel:
                            text: 'Ações:'
                        MDFillRoundFlatIconButton:
                            icon: "language-python"
                            text: "Adicionar despesas"
                            size_hint_x: 0.9
                            size_hint_y: 0.4
                            pos_hint:{"center_x": 0.5}
                            md_bg_color: 7/255, 166/255, 54/255, 1
                        MDFillRoundFlatIconButton:
                            icon: "language-python"
                            text: "Adicionar receitas"
                            size_hint_x: 0.9
                            size_hint_y: 0.4
                            pos_hint:{"center_x": 0.5}
                            md_bg_color: 7/255, 166/255, 54/255, 1
                        MDFillRoundFlatIconButton:
                            icon: "language-python"
                            text: "Cartões de crédito"
                            size_hint_x: 0.9
                            size_hint_y: 0.4
                            pos_hint:{"center_x": 0.5}
                            md_bg_color: 7/255, 166/255, 54/255, 1
                        MDFillRoundFlatIconButton:
                            icon: "language-python"
                            text: "Categorias de gastos"
                            size_hint_x: 0.9
                            size_hint_y: 0.4
                            pos_hint:{"center_x": 0.5}
                            md_bg_color: 7/255, 166/255, 54/255, 1
                        MDFillRoundFlatIconButton:
                            icon: "language-python"
                            text: "Despesas Fixas"
                            size_hint_x: 0.9
                            size_hint_y: 0.4
                            pos_hint:{"center_x": 0.5}
                            md_bg_color: 7/255, 166/255, 54/255, 1
                    MDBoxLayout:
                        size_hint: 1, 0.01
                        md_bg_color: 7/255, 7/255, 7/255, 1 
                    MDBoxLayout:
                        name: "Gastos"
                        orientation: 'vertical'
                        MDLabel:
                            text: 'Gastos mensais'
                        MDCard:
                            size_hint: .7, .4
                            focus_behavior: True
                            pos_hint: {"center_x": .5, "center_y": .5}
                            md_bg_color: 7/255, 166/255, 54/255, 1
                            elevation: 6
                    MDBoxLayout:
                        size_hint: 1, 0.01
                        md_bg_color: 7/255, 7/255, 7/255, 1 
                    MDBoxLayout:
                        name: "Limite"
                        orientation: 'vertical'
                        MDLabel:
                            text: 'Limite por categoria'
                        MDCard:
                            size_hint: .7, .4
                            focus_behavior: True
                            pos_hint: {"center_x": .5, "center_y": .5}
                            md_bg_color: 7/255, 166/255, 54/255, 1
                            elevation: 6
            MDBoxLayout:
                name: 'Navigation'
                orientation: "horizontal"
                size_hint: 1.0, 0.15
                md_bg_color: 7/255, 166/255, 54/255, 1
                MDBoxLayout:
                    orientation: 'vertical'
                    MDIconButton:
                        icon: 'menu-left'
                        pos_hint: {"center_x": .5}
                    MDLabel:
                        text: "Ajustes"
                        halign: "center"
                MDBoxLayout:
                    orientation: 'vertical'
                    MDIconButton:
                        icon: 'menu-left'
                        pos_hint: {"center_x": .5}
                    MDLabel:
                        text: "Tela Inicial"
                        halign: "center"
                MDBoxLayout:
                    orientation: 'vertical'
                    MDIconButton:
                        icon: 'menu-left'
                        pos_hint: {"center_x": .5}
                    MDLabel:
                        text: "Ajuda"
                        halign: "center"

                    


                
                    