<Interface>:
    Screen:
        name: 'login'
        MDBoxLayout:
            orientation: 'vertical'            
            size_hint: 1, 1
            MDBoxLayout:
                orientation: 'vertical'    
                size_hint: 1, 0.5
                md_bg_color: 3/255, 117/255, 37/255, 1
                MDFloatLayout:
                    Image:
                        source: "../img/logo.png"
                        size_hint: 0.9, 0.9
                        pos_hint:{"center_x": 0.5, "center_y":0.5}
            MDBoxLayout:
                orientation: 'vertical'    
                size_hint: 1, 0.4
                MDFloatLayout:
                    MDLabel:
                        text: 'Email'
                        halign: 'center'
                        pos_hint: {"center_x": .15, "center_y": .88}
                        font_size: "24sp"

