                        theme_text_color: 'Custom'
                        normal_color: 226/255, 226/255, 226/255, 1
                        password: True
                    MDLabel:
                        text: "Confirmar Senha:"
                        halign: 'center'
                        pos_hint: {"center_x": .21, "center_y": .30}
                        font_size: "16sp"
                    MDTextFieldRound:
                        size_hint: .8, .06
                        pos_hint: {"center_x": .5, "center_y": .25}
                        theme_text_color: 'Custom'
                        normal_color: 226/255, 226/255, 226/255, 1 
